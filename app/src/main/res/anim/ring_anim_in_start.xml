<!-- res/anim/scale_animation.xml -->
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Анимация уменьшения -->
    <scale
        android:fromXScale="1.0"
        android:toXScale="0.98"
        android:fromYScale="1.0"
        android:toYScale="0.98"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="200"/>

    <!-- Анимация восстановления -->
    <scale
        android:fromXScale="0.98"
        android:toXScale="1.0"
        android:fromYScale="0.98"
        android:toYScale="1.0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="200"
        android:startOffset="200"/> <!-- Задержка перед восстановлением, равная длительности анимации уменьшения -->

</set>
