<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="450dp"
    android:layout_margin="10dp"
    android:background="@drawable/list_item_bg"
    android:gravity="center"
    android:orientation="vertical">

    <!-- VideoView для воспроизведения анимации -->

    <!-- Изображение выпавшего куба -->

    <!-- Текст с именем и редкостью куба -->
    <ImageView
        android:id="@+id/cubeImageView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/block_placeholder" />

    <TextView
        android:id="@+id/cubeNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="NAME"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/cubeRarityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center"
        android:text="RARITY"
        android:textColor="@color/textColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/greatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/settings_button_background"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="Great!"
        android:textColor="@color/textColor"
        android:textSize="16sp" />

</LinearLayout>
